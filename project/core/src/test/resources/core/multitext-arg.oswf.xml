<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow SYSTEM "OSWf-3.0.dtd">
<workflow>

  <meta name='Purpose'><![CDATA[
      
      DescriptorQuirksTest
      -------------------
      The purpose of this test is to see if XML CDATA comment are properly parsed
      in Beahshell scripts. Otherwise, writing scripts with ampersands and
      angle brackets would be very difficult.

  ]]></meta>

  <initial-actions>

    <action id="1" name="Start Workflow">
      <pre-functions>
        <function type="beanshell">
          <arg name="script"><![CDATA[
            tests.DescriptorQuirksTest test = transientVars.get("test");
            test.counter++;
            test.counter++;
        ]]></arg>
        </function>
      </pre-functions>
      <results>
        <default-result status="Underway" step="1" owner="${actor}"/>
      </results>
    </action>
  </initial-actions>

  <steps>
    <step id="1" name="Step">
      <actions>
        <action id="2" name='End' auto='true' finish='true'>
          <results>
            <default-result status='Completed'/>
          </results>
        </action>
      </actions>
    </step>
    
  </steps>
  
</workflow>

