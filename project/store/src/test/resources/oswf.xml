<oswf>

    <persistence>
        <workflow-store class="org.informagen.oswf.impl.stores.HibernateStore"/>  
        <propertyset-store class="org.informagen.oswf.impl.HibernatePropertySetStore">
            <parameter name="propertySet" value="US-Eastern" />
        </propertyset-store>    
    </persistence>

	<loader class="org.informagen.oswf.impl.loaders.URLLoader">
        <workflow name="Action Restrictions" type="resource" location="usage/ActionRestrictions.oswf.xml"/>
        <workflow name="Example"             type="resource" location="usage/example.oswf.xml"/>
        <workflow name="LeaveRequest Wrong"  type="resource" location="usage/LeaveRequest-Wrong.xml"/>
        <workflow name="LeaveRequest Alt"    type="resource" location="usage/LeaveRequest-alt.xml"/>
        <workflow name="LeaveRequest"        type="resource" location="usage/LeaveRequest.xml"/>
        <workflow name="Holiday"             type="resource" location="usage/holiday.xml"/>
        <workflow name="StepConditions"      type="resource" location="usage/step-conditions.oswf.xml"/>
        <workflow name="Step Ownership"      type="resource" location="usage/StepOwnership.oswf.xml"/>
        <workflow name="Join Nodes"          type="resource" location="usage/joinnodes.oswf.xml"/>

	</loader>

    <propertysets>

        <!-- Use all defaults; requires 'SessionFactory' to be injected via 'persistentArgs' -->
        <propertyset name="hibernate" class="org.informagen.oswf.propertyset.HibernatePropertySet"/>    
    
        <!-- Report time in the Eastern US timezone using a non-IS8601 format -->
        <propertyset name="US-Eastern" class="org.informagen.oswf.propertyset.HibernatePropertySet" >    
            <parameter name="timeZone" value="US/Eastern" />
            <parameter name="dateFormat" value="EEE, dd-MMM-yyyy hh:mm Z" />
        </propertyset>

        <!-- Configure completely via XML parameters; no hibernate configuration files used  --> 
        <propertyset name="H2-Hibernate-cfg" class="org.informagen.oswf.propertyset.HibernatePropertySet" >    
 
            <parameter name="timeZone" value="US/Eastern" />
            <parameter name="dateFormat" value="yyyy-MM-dd HH:mm:ss Z" />

            <parameter name="hibernate.connection.driver_class" value="org.h2.Driver"/>
            <parameter name="hibernate.dialect"                 value="org.hibernate.dialect.H2Dialect"/>
            <parameter name="hibernate.connection.url"          value="jdbc:h2:mem:propertyset;DB_CLOSE_DELAY=-1"/>
            <parameter name="hibernate.connection.username"     value="sa"/>
            <parameter name="hibernate.connection.password"     value=""/>
            <parameter name="hibernate.hbm2ddl.auto"            value="create-drop"/>
            <parameter name="hibernate.connection.autocommit"   value="true"/>
            <parameter name="hibernate.connection.pool_size"    value="1"/>

            <parameter name="mapping-PropertySet" value="org/informagen/oswf/hbm/HibernatePropertySetItem.hbm.xml" />

        </propertyset>

    </propertysets>


</oswf>
