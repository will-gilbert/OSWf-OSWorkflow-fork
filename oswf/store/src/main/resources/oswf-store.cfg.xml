<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        
        <!-- OSWf 3.x Store HBM files =================================================== -->
        <mapping resource="org/informagen/oswf/hbm/HibernateCurrentStep.hbm.xml" />
        <mapping resource="org/informagen/oswf/hbm/HibernateHistoryStep.hbm.xml" />
        <mapping resource="org/informagen/oswf/hbm/HibernateProcessInstance.hbm.xml" />

        <!-- OSWf Process Description as XML ============================================ --> 
        <mapping resource="org/informagen/oswf/hbm/HibernateProcessDescription.hbm.xml" /> 

        <!-- Process Variable used with OSWf WorkflowStores ============================= -->
        <mapping resource="org/informagen/oswf/hbm/HibernateTypedMapItem.hbm.xml" />

        <!-- EXPERIMENTAL: Workflow Description as schema  ============================== -->
        <!-- <mapping resource="org/informagen/oswf/hbm/WorkflowDescriptor.hbm.xml" /> -->


    </session-factory>

</hibernate-configuration>
