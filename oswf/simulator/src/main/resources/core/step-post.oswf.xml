<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow PUBLIC "-//Open Source Workflow//DTD OSWf 3.0//EN" "http://oswf.sourceforge.net/OSWf-3.0.dtd">
<workflow>
  <initial-actions>
    <action id="1" name="Start Workflow">
      <results>
        <default-result status="Underway" step="1" owner="crazybob"/>
      </results>
    </action>
  </initial-actions>
  <steps>
    <step id="1" name="First Step">
      <actions>
        <action id="2" name="The first action" finish="true">
          <restrict-to>
            <conditions>
              <condition type='alias' name='hasStatusOf'>
                <arg name="status">Underway</arg>
              </condition>
            </conditions>
          </restrict-to>
          <results>
            <default-result status="LastFinished" step="2"/>
          </results>
        </action>
      </actions>
      <post-functions>
        <function type="beanshell" name="bsh.function">
          <arg name="script">persistentVars.setString("postkey", "postvalue")</arg>
        </function>
      </post-functions>
    </step>
    <step id="2" name="Second step" />
  </steps>
</workflow>

